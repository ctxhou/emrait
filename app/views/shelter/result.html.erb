<% if @shelter_hash.length > 0 %>
    <h2>鄰近災民收容所列表</h2>
    <div class="h4">有<%= @victims %>位災民</div>
    <table class="table">
        <thead>
            <tr>
                <th>距離(km)</th>
                <th>收容所名稱</th>
                <th>縣市</th>
                <th>地址</th>
                <th></th>
            </tr>
        </thead>
        <% @shelter_hash.each do |distance, ary| %>
            <tr>
                <td><%= distance %></td>
                <td><%= ary["災民收容所名稱"] %></td>
                <td><%= ary["所在縣市"] %></td>
                <td><%= ary["收容所地址"] %></td>
                <td><button class="btn btn-link js-shelter" data-lat="<%= ary["lat"] %>" data-lng="<%= ary["lng"] %>" data-toggle="modal" data-target="#myModal">詳細資訊</button></td>
            </tr>
        <% end %>
    </table>
<% end %>

<input type="hidden" value="<%= @lat %>" id="lat">
<input type="hidden" value="<%= @lng %>" id="lng">

<%= render "units/bootstrap_modal" %>

<% content_for :javascript do %>
    <script src="//maps.googleapis.com/maps/api/js?v=3.exp&libraries=geometry"></script>
    <script async="async" data-turbolinks-track="true" src="/assets/dist/shelter.js"></script>
<% end %>