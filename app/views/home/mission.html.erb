<% if @mission.length > 0 %>
    <h3>出勤中救護車 <button id="reset" class="btn btn-default pull-right">重置任務</button></h3>
    <table class="table">
        <thead>
            <tr>
                <th>救護車</th>
                <th>抵達災點時間</th>
                <th>抵達醫院時間</th>
                <th>指定醫院</th>
                <!-- <th>指派時間</th> -->
                <th></th>
            </tr>
        </thead>
            <% @mission.each_with_index do |ary, index| %>
                <tr id="row_<%= index%>">
                    <td><%= ary["structure"] %></td>
                    <td><%= ary["disaster_time"] %></td>
                    <td><%= ary["hospital_time"] %></td>
                    <td><%= ary["hospital"] %></td>
                    <td><button class="btn btn-success js-mission-complete" data-tr="row_<%= index%>" data-id="<%= ary["id"] %>" data-lat="<%= ary[:start_lat] %>" data-lng="<%= ary[:start_lng] %>">回報任務完成</button></td>
                </tr>
            <% end %>
    </table>
<% else %>
    <h3>目前尚無出勤中救護車</h3>
<% end %>

<% content_for :javascript do %>
<%= javascript_include_tag "dist/mission" %>

<% end %>
